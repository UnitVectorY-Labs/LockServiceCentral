<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for standard application logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Canonical log appender - outputs raw JSON lines -->
    <appender name="CANONICAL" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Canonical logger - dedicated for structured JSON log records -->
    <logger name="canonical" level="INFO" additivity="false">
        <appender-ref ref="CANONICAL" />
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
